{
  "name": "epanet-js",
  "version": "0.8.0-alpha.4",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/src/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/modelcreate/epanet-js.git"
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:coverage-ci": "vitest run --coverage --reporter=junit --outputFile=test-report.junit.xml",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@model-create/epanet-engine": "workspace:*"
  },
  "peerDependencies": {},
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "all",
    "printWidth": 80
  },
  "description": "EPANET engine in javascript",
  "author": "Luke Butler",
  "devDependencies": {
    "@types/node": "^22.15.3",
    "@vitest/coverage-v8": "^3.1.2",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.0.0",
    "vitest": "^3.1.2"
  }
}